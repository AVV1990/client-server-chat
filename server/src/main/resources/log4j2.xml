<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>


    <Appenders>
        <File name="FILE1" filename="${basePath}/logfile1.log" append="true">
            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C [%F:%L] - %m%n" />
        </File>

        <Console name="STDOUT" target = "SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C [%F:%L] - %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
                <AppenderRef ref="FILE1"/>
        </Root>

        <Logger name="ru.geekbrains.march.chat.server.ServerApp" level="info" />
        <Logger name="ru.geekbrains.march.chat.server.ClientHandler" level="info" />
        <Logger name="ru.geekbrains.march.chat.server.Server" level="info" />
        <Logger name="ru.geekbrains.march.chat.server.DbConnection" level="info" />
        <Logger name="ru.geekbrains.march.chat.server.DbAuthenticationProvider" level="info" />

    </Loggers>

</Configuration>